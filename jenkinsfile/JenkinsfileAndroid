@Library('jenkins-shared-cocos') _

pipeline {
  agent { label 'cocos-windows-agent' }
  environment {
    PLATFORM = 'android'
  }

  parameters {
    string(name: 'git_ref', defaultValue: 'main')
    choice(name: 'channel', choices: ['official','xiaomi','huawei'])
    choice(name: 'env', choices: ['dev', 'test', 'prod'])
    choice(name: 'mode', choices: ['release','debug'])
    choice(name: 'bundle', choices: ['hall','game'])
    // string(name: 'version_name', defaultValue: 'Fixed')
    // string(name: 'version_code', defaultValue: 'Add 1 each time.')
    booleanParam(name: 'apk', defaultValue: false)
    booleanParam(name: 'clean', defaultValue: false)
  }

  stages {
    stage('Start') {
      steps { cocosPipeline(this) }
    }

    stage('Android') {
      when {
        expression { return params.apk == true }
      }
      steps { androidBuild(this) }
    }

    stage('Publish') {
      steps {
        publishArtifacts(this)
        updateManifest(this)
      }
    }
  }
}
